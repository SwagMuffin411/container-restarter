# Portainer Connection
PORTAINER_URL=http://portainer:9000

# Authentication - Use EITHER API Key (recommended) OR Username/Password
PORTAINER_API_KEY=ptr_your-api-key-here
# PORTAINER_USERNAME=admin
# PORTAINER_PASSWORD=your-password

# Container Settings
ENDPOINT_ID=1
CONTAINER_NAME=your-container-name

# Schedule Settings
RESTART_TIME=03:00
CHECK_INTERVAL=60

# Optional: Timezone
# TZ=America/New_York
